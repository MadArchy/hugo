{
  "name": "hugo-cyberelectro",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build:css": "postcss assets/css/main.css -o static/css/main.css",
    "watch:css": "postcss assets/css/main.css -o static/css/main.css --watch",
    "hugo:server": "hugo server -D",
    "dev": "concurrently \"npm:watch:css\" \"npm:hugo:server\"",
    "build": "npm run build:css && hugo --minify"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "postcss": "^8.5.6",
    "postcss-cli": "^9.1.0",
    "tailwindcss": "^4.1.17"
  }
}
